FROM node:20-alpine AS builder
WORKDIR /app
COPY . .
RUN if [ ! -f package.json ]; then echo "package.json not found; web source not initialized" >&2; exit 1; fi
RUN if [ -f package-lock.json ]; then npm ci; else npm install; fi
RUN npm run build

FROM nginx:1.27-alpine
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY docker-entrypoint.d/10-gen-config.sh /docker-entrypoint.d/10-gen-config.sh
RUN chmod +x /docker-entrypoint.d/10-gen-config.sh
COPY --from=builder /app/dist /usr/share/nginx/html
EXPOSE 80
