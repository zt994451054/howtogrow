page {
  --brand: #f97316;
  --brand-weak: #fff6e6;
  --bg-page: #f3f4f6;
  --bg-card: #ffffff;
  --bg-soft: rgba(249, 115, 22, 0.08);
  --bg-result: #fff5f2;

  --text-primary: #1f2937;
  --text-secondary: #6b7280;
  --text-muted: #9ca3af;

  --border: #f3f4f6;

  --radius-12: 24rpx;
  --radius-16: 32rpx;
  --radius-24: 48rpx;
  --radius-pill: 9999rpx;

  --shadow-sm: 0 8rpx 20rpx rgba(17, 24, 39, 0.06);
  --shadow-md: 0 16rpx 40rpx rgba(17, 24, 39, 0.10);
  --shadow-brand: 0 16rpx 32rpx rgba(249, 115, 22, 0.18);
}
