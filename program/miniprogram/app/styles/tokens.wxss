page,
.tabbar {
  --brand: #f97316;
  --brand-weak: #fff6e6;
  --bg-page: #f3f4f6;
  --bg-card: #ffffff;
  --bg-soft: rgba(249, 115, 22, 0.08);
  --bg-result: #fff5f2;

  --text-primary: #1f2937;
  --text-secondary: #6b7280;
  --text-muted: rgba(60, 60, 59, 0.3);
  --text-ink: #3c3c3b;
  --text-ink-muted: #3c3c3b;

  --border: #f3f4f6;
  --page-padding: 32rpx;
  --page-nav-height: 0px;
  --section-gap: 24rpx;
  --page-footer-gap: 60rpx;

  --radius-12: 24rpx;
  --radius-16: 32rpx;
  --radius-24: 48rpx;
  --radius-pill: 9999rpx;

  --shadow-sm: 0 8rpx 20rpx rgba(17, 24, 39, 0.06);
  --shadow-md: 0 16rpx 40rpx rgba(17, 24, 39, 0.10);
  --shadow-brand: 0 16rpx 32rpx rgba(249, 115, 22, 0.18);
}
