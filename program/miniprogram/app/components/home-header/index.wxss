.row {
  display: flex;
  flex-direction: row;
}

.col {
  display: flex;
  flex-direction: column;
}

.between {
  justify-content: space-between;
}

.tap {
  opacity: 0.85;
}

.header {
  padding: var(--page-padding) var(--page-padding) 16rpx;
  position: sticky;
  top: 0;
  z-index: 20;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
}

.a {
  align-items: center;
  gap: 16rpx;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
  background: var(--brand);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar__img {
  width: 100%;
  height: 100%;
}

.avatar__text {
  font-size: 24rpx;
  font-weight: 600;
}

.greet {
  font-size: 32rpx;
  color: var(--text-primary);
  line-height: 1.2;
}

.greet__name {
  font-weight: 600;
}

.greet__suffix {
  font-weight: 600;
}

.icon-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 0;
  background: transparent;
  box-shadow: none;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon {
  width: 60rpx;
  height: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.menu-icon__line {
  width: 100%;
  height: 4rpx;
  border-radius: 9999rpx;
  background: currentColor;
}
