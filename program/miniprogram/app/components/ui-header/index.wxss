.wrap {
  position: sticky;
  top: 0;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
  z-index: 20;
  padding-bottom: 16rpx;
}

.bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 var(--page-padding);
}

.side {
  width: 72rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.side.right {
  justify-content: flex-end;
}

.btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-radius: 0;
  background: transparent;
  /* color: var(--text-secondary);
  background: #fff;
  border-radius: 9999rpx;
  box-shadow: var(--shadow-sm);
  border: 2rpx solid rgba(17, 24, 39, 0.06); */
}

.side.right .btn {
  justify-content: flex-end;
}

.btn:active {
  transform: scale(0.96);
}

.center-content {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.logo-image {
  height: 48rpx; /* Adjust based on design requirement, keeping it within bar height */
  width: auto;
}

.title {
  font-weight: 600;
  font-size: 32rpx;
  text-align: center;
  color: var(--text-primary);
  line-height: 1.2;
}

.left-icon {
  width: 48rpx;
  height: 48rpx;
}
