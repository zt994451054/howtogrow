@import "./styles/tokens.wxss";
@import "./styles/util.wxss";

page {
  background: var(--bg-page);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", Arial, "PingFang SC", "Hiragino Sans GB",
    "Microsoft YaHei", sans-serif;
}

/* Prevent “not centered” layouts caused by `width: 100%` + horizontal `padding` (default content-box). */
page,
view,
scroll-view,
swiper,
swiper-item,
button,
input,
textarea,
image {
  box-sizing: border-box;
}


@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  animation: fadeIn 0.8s ease-out forwards;
}

.safe-bottom {
  padding-bottom: calc(env(safe-area-inset-bottom) + 24rpx);
}
