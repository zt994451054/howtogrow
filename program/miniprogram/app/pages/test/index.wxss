.page {
  min-height: 100vh;
  background: #fff;
  padding-bottom: 220rpx;
}

.head {
  padding: 36rpx 48rpx 18rpx;
}

.h1 {
  font-size: 44rpx;
  font-weight: 900;
  color: var(--text-primary);
}

.h2 {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: var(--text-muted);
}

.loading {
  padding: 40rpx 48rpx;
  color: var(--text-muted);
  font-size: 24rpx;
}

.empty {
  padding: 120rpx 48rpx 0;
  text-align: center;
}

.empty__logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 9999rpx;
  background: #fff;
  box-shadow: var(--shadow-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 44rpx;
}

.logo-dot {
  width: 96rpx;
  height: 96rpx;
  border-radius: 9999rpx;
  background: var(--brand);
  opacity: 0.25;
  position: relative;
}

.logo-smile {
  position: absolute;
  left: 18rpx;
  right: 18rpx;
  top: 38rpx;
  height: 40rpx;
  border-bottom: 6rpx solid #fff;
  border-radius: 0 0 200rpx 200rpx;
}

.logo-tail {
  position: absolute;
  right: 26rpx;
  top: 22rpx;
  width: 6rpx;
  height: 32rpx;
  background: #fff;
  border-radius: 6rpx;
}

.empty__title {
  font-size: 34rpx;
  font-weight: 900;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty__desc {
  font-size: 22rpx;
  color: var(--text-muted);
  line-height: 36rpx;
  white-space: pre-line;
  margin-bottom: 48rpx;
}

.btn-primary {
  background: var(--brand);
  color: #fff;
  border-radius: var(--radius-pill);
  font-size: 26rpx;
  font-weight: 800;
  padding: 22rpx 0;
  width: 360rpx;
  box-shadow: var(--shadow-brand);
}

.grid {
  padding: 0 48rpx 0;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.cell {
  background: #fff;
  border-radius: 32rpx;
  padding: 28rpx 24rpx;
  box-shadow: var(--shadow-sm);
  border: 2rpx solid transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 14rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.avatar.boy {
  background: rgba(59, 130, 246, 0.12);
}
.avatar.girl {
  background: rgba(236, 72, 153, 0.12);
}
.avatar.unk {
  background: rgba(107, 114, 128, 0.10);
}

.name {
  font-weight: 900;
  color: var(--text-primary);
  font-size: 26rpx;
}

.age {
  font-size: 20rpx;
  color: var(--text-muted);
  background: #f9fafb;
  padding: 6rpx 16rpx;
  border-radius: var(--radius-pill);
}

.cell.add {
  background: transparent;
  border: 2rpx dashed #d1d5db;
  box-shadow: none;
  color: var(--text-muted);
}

.add__icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: var(--text-muted);
}

.add__text {
  font-size: 22rpx;
  font-weight: 900;
}

