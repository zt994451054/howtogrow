.page {
  height: 100vh;
  background: var(--bg-card);
  display: flex;
  flex-direction: column;
}

.status {
  background: transparent;
}

.top {
  padding: var(--page-padding) var(--page-padding) 16rpx;
  align-items: center;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
  position: sticky;
  top: 0;
  z-index: 20;
}

.spacer {
  width: 72rpx;
  height: 72rpx;
}

.back {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-primary);
  background: transparent;
  border-radius: 0;
  box-shadow: none;
  border: none;
}

.close {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-primary);
  background: transparent;
  border-radius: 0;
  box-shadow: none;
  border: none;
}

.back:active,
.close:active {
  transform: scale(0.96);
}

.top__title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.2;
}

.body {
  flex: 1;
  min-height: 0;
  padding: 0 64rpx 16rpx;
  display: flex;
  flex-direction: column;
}

.flag-wrap {
  display: flex;
  justify-content: center;
  margin: 20rpx 0 80rpx;
}

.flag {
  width: 300rpx;
  height: 300rpx;
  display: block;
}

.review__meta {
  padding: 0 4rpx;
  color: var(--text-muted);
  font-size: 24rpx;
  font-weight: 600;
}

.review-swiper {
  flex: 1;
  min-height: 0;
}

.review-slide {
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 48rpx;
}

.review-card {
  background: transparent;
  padding: 20rpx 0 32rpx;
  /* border-bottom: 1rpx solid var(--border); */
}

.review-card:last-child {
  border-bottom: 0;
}

.review-card__question {
  color: #E18638;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 42rpx;
}

.review-card__desc {
  margin-top: 18rpx;
  font-size: 22rpx;
  line-height: 34rpx;
}

.review-card__desc-label {
  /* color: #3C3C3B; */
  /* font-weight: 600; */
}

.review-card__desc-text {
  /* color: #3C3C3B; */
  /* font-weight: 600; */
}

.review-card__advice-title {
  margin-top: 96rpx;
  color: #E18638;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 42rpx;
}

.review-card__advice {
  margin-top: 16rpx;
  color: #3C3C3B;
  font-size: 22rpx;
  line-height: 34rpx;
  white-space: pre-line;
}

.summary {
  background: transparent;
  border-radius: 0;
  padding: 24rpx 0 0;
  box-shadow: none;
  margin: 12rpx 0 24rpx;
  border-top: 1rpx solid var(--border);
}

.summary--slide {
  margin: 0;
  padding-top: 8rpx;
  border-top: 0;
}

.summary__title {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.summary__text {
  color: var(--text-secondary);
  font-size: 24rpx;
  line-height: 40rpx;
}

.footer {
  padding: 20rpx 32rpx var(--page-footer-gap);
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
  border-top: 1rpx solid rgba(243, 244, 246, 1);
}

.btn {
  font-size: 28rpx;
  font-weight: 600;
}
