.page {
  height: 100vh;
  background: var(--bg-card);
  display: flex;
  flex-direction: column;
}

.status {
  background: transparent;
}

.top {
  padding: 0 20rpx 12rpx;
  align-items: center;
}

.spacer {
  width: 72rpx;
  height: 72rpx;
}

.back {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary);
  background: #fff;
  border-radius: 9999rpx;
  box-shadow: var(--shadow-sm);
  border: 2rpx solid rgba(17, 24, 39, 0.06);
}

.close {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary);
  background: #fff;
  border-radius: 9999rpx;
  box-shadow: var(--shadow-sm);
  border: 2rpx solid rgba(17, 24, 39, 0.06);
}

.back:active,
.close:active {
  transform: scale(0.96);
}

.top__title {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: 900;
  color: var(--text-primary);
}

.body {
  flex: 1;
  min-height: 0;
  padding: 0 32rpx;
}

.flag-wrap {
  display: flex;
  justify-content: center;
  margin: 20rpx 0 40rpx;
}

.flag {
  width: 300rpx;
  height: 300rpx;
  border-radius: 9999rpx;
  background: rgba(249, 115, 22, 0.12);
  position: relative;
  box-shadow: var(--shadow-sm);
}

.flag__bar {
  position: absolute;
  left: 140rpx;
  top: 60rpx;
  width: 20rpx;
  height: 190rpx;
  background: var(--brand);
  border-radius: 20rpx;
}

.flag__tag {
  position: absolute;
  left: 160rpx;
  top: 86rpx;
  width: 96rpx;
  height: 80rpx;
  background: rgba(253, 186, 116, 0.9);
  border-radius: 10rpx;
  color: #fff;
  font-weight: 900;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  white-space: pre-line;
}

.review {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 24rpx;
}

.review__meta {
  padding: 0 4rpx;
  color: var(--text-muted);
  font-size: 24rpx;
  font-weight: 900;
}

.review-card {
  background: transparent;
  padding: 20rpx 0 32rpx;
  border-bottom: 1rpx solid var(--border);
}

.review-card:last-child {
  border-bottom: 0;
}

.review-card__question {
  color: #E18638;
  font-size: 30rpx;
  font-weight: 900;
  line-height: 42rpx;
}

.review-card__desc {
  margin-top: 18rpx;
  font-size: 22rpx;
  line-height: 34rpx;
}

.review-card__desc-label {
  color: #3C3C3B;
  font-weight: 900;
}

.review-card__desc-text {
  color: #3C3C3B;
  font-weight: 600;
}

.review-card__advice-title {
  margin-top: 48rpx;
  color: #E18638;
  font-size: 30rpx;
  font-weight: 900;
  line-height: 42rpx;
}

.review-card__advice {
  margin-top: 16rpx;
  color: #3C3C3B;
  font-size: 22rpx;
  line-height: 34rpx;
  white-space: pre-line;
}

.summary {
  background: transparent;
  border-radius: 0;
  padding: 24rpx 0 0;
  box-shadow: none;
  margin: 12rpx 0 24rpx;
  border-top: 1rpx solid var(--border);
}

.summary__title {
  font-weight: 900;
  color: var(--text-primary);
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.summary__text {
  color: var(--text-secondary);
  font-size: 24rpx;
  line-height: 40rpx;
}

.tail {
  height: 120rpx;
}

.footer {
  padding: 20rpx 32rpx 28rpx;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
  border-top: 1rpx solid rgba(243, 244, 246, 1);
}

.btn {
  width: 100%;
  background: var(--brand);
  color: #fff;
  border-radius: var(--radius-pill);
  padding: 10rpx 0;
  font-size: 28rpx;
  font-weight: 900;
  box-shadow: var(--shadow-brand);
}

.btn-ghost {
  margin-top: 18rpx;
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  color: var(--text-secondary);
  border-radius: var(--radius-pill);
  padding: 10rpx 0;
  font-size: 28rpx;
  font-weight: 900;
  border: 2rpx solid rgba(17, 24, 39, 0.06);
}
