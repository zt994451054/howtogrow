.page {
  min-height: 100vh;
  background: #fff;
}

.subhead {
  padding: 20rpx 32rpx 0;
}

.subhead__title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.subhead__meta {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: var(--text-muted);
}

.body {
  padding: 120rpx 48rpx 0;
  text-align: center;
}

.bubble {
  width: 260rpx;
  height: 260rpx;
  border-radius: 9999rpx;
  background: #f9fafb;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 84rpx;
  margin-bottom: 40rpx;
}

.t1 {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.t2 {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-bottom: 48rpx;
}

.btn {
  width: 100%;
  background: var(--brand);
  color: #fff;
  border-radius: 24rpx;
  padding: 22rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: var(--shadow-brand);
}

