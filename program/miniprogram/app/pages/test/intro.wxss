.page {
  min-height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.subhead {
  padding: var(--section-gap) var(--page-padding) 0;
}

.subhead__title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.subhead__meta {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: var(--text-muted);
}

.body {
  flex: 1;
  padding: 120rpx var(--page-padding) 0;
  text-align: center;
}

.bubble {
  width: 260rpx;
  height: 260rpx;
  border-radius: 9999rpx;
  background: #f9fafb;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 84rpx;
  margin-bottom: 40rpx;
}

.t1 {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.t2 {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-bottom: 48rpx;
}

.footer {
  padding: 18rpx var(--page-padding) var(--page-footer-gap);
}
