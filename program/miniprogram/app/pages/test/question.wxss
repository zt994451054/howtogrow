.page {
  min-height: 100vh;
  background: #fff;
}

.status {
  background: #fff;
  height: var(--page-nav-height);
}

.header {
  padding: var(--page-padding) var(--page-padding) 10rpx;
  background: #fff;
}

.progress {
  padding-top: 0;
}

.progress__bar {
  width: 100%;
  height: 14rpx;
  background: #f3f4f6;
  border-radius: 9999rpx;
  overflow: hidden;
}

.progress__fill {
  height: 100%;
  background: var(--brand);
  border-radius: 9999rpx;
  transition: width 200ms ease;
}

.actions {
  padding: 18rpx 0 0;
}

.icon-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 9999rpx;
  background: transparent;
  border: 0;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  display: block;
}

.icon-btn:active {
  transform: scale(0.96);
}

.body {
  height: calc(100vh - 260rpx);
  padding: 0 var(--page-padding);
}

.title {
  margin-top: 40rpx;
  margin-bottom: 80rpx;
  text-align: center;
  color: #e18639;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 52rpx;
  white-space: pre-line;
}

.swap {
  margin: 26rpx auto 44rpx;
  width: 220rpx;
  background: #f3f4f6;
  border-radius: var(--radius-pill);
  padding: 12rpx 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  color: var(--text-muted);
  font-weight: 600;
  font-size: 20rpx;
}

.swap__icon {
  font-size: 22rpx;
}

.options {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  padding-bottom: 30rpx;
}

.opt {
  width: 100%;
  padding: 28rpx 28rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  /* font-weight: 800; */
  line-height: 36rpx;
  background: #FCE6D1;
  border: 4rpx solid transparent;
  color: #322e2a;
  box-sizing: border-box;
}

.opt--on {
  background: #edb67f;
  /* border-color: #F08019; */
  /* color: #111827; */
  box-shadow: var(--shadow-sm);
}

.spacer {
  height: 80rpx;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 22rpx var(--page-padding) var(--page-footer-gap);
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
  border-top: 1rpx solid rgba(243, 244, 246, 0.7);
}

.dual {
  display: flex;
  gap: 16rpx;
}

.dual .btn-cta {
  flex: 1;
  width: auto !important;
}
