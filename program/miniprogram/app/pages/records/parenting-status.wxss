.page {
  min-height: 100vh;
  background: #fff;
}

.body {
  padding: 24rpx;
}

.wrap {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.card {
  border: 1rpx solid rgba(243, 244, 246, 0.9);
  border-radius: 18rpx;
  padding: 18rpx;
  background: #fff;
}

.card__title {
  font-weight: 900;
  margin-bottom: 12rpx;
  color: var(--text-primary);
}

.children {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.child {
  padding: 14rpx 16rpx;
  border-radius: 14rpx;
  background: #f3f4f6;
  color: #111827;
}

.child.on {
  background: #ffe4cf;
  color: #7c2d12;
}

.child__name {
  font-weight: 900;
}

.child__sub {
  font-size: 22rpx;
  opacity: 0.8;
}

.date {
  padding: 16rpx;
  background: #f3f4f6;
  border-radius: 14rpx;
  font-weight: 800;
  color: #111827;
}

.grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 12rpx;
}

.tag {
  border-radius: 16rpx;
  background: #f3f4f6;
  overflow: hidden;
  border: 2rpx solid transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 10rpx 8rpx 12rpx;
}

.tag:active {
  transform: scale(0.98);
}

.tag.on {
  background: #fff7ed;
  border-color: rgba(249, 115, 22, 0.35);
  box-shadow: 0 10rpx 26rpx rgba(249, 115, 22, 0.12);
}

.tag__img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 9999rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  background: rgba(249, 250, 251, 1);
}

.tag__label {
  margin-top: 10rpx;
  font-size: 22rpx;
  font-weight: 900;
  color: rgba(31, 41, 55, 1);
}

.tag.on .tag__label {
  color: rgba(249, 115, 22, 1);
}

.empty {
  padding: 160rpx 0;
}

.empty__title {
  font-weight: 900;
  font-size: 34rpx;
  margin-bottom: 12rpx;
}

.empty__desc {
  color: var(--text-muted);
  font-weight: 700;
  white-space: pre-line;
}

