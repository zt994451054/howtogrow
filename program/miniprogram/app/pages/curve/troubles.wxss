.page {
  min-height: 100vh;
  background: var(--bg-page);
}

.body {
  background: var(--bg-page);
  padding: 18rpx 32rpx 220rpx;
}

.wrap {
  display: flex;
  flex-direction: column;
}

.loading {
  padding: 60rpx 0;
  text-align: center;
  color: var(--text-muted);
  font-size: 24rpx;
  font-weight: 700;
}

.empty {
  padding: 160rpx 0 100rpx;
}

.empty__title {
  font-weight: 900;
  font-size: 34rpx;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.empty__desc {
  color: var(--text-muted);
  font-weight: 700;
  font-size: 24rpx;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 22rpx;
}

.row-item {
  gap: 18rpx;
  align-items: center;
}

.rank {
  width: 40rpx;
  text-align: center;
  font-weight: 900;
  font-size: 30rpx;
  flex-shrink: 0;
}

.rank.top1 {
  color: rgba(249, 115, 22, 1);
}

.rank.top2 {
  color: rgba(107, 114, 128, 1);
}

.rank.top3 {
  color: rgba(194, 65, 12, 1);
}

.rank.other {
  font-size: 24rpx;
  color: rgba(209, 213, 219, 1);
}

.icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 9999rpx;
  background: rgba(249, 250, 251, 1);
  border: 2rpx solid rgba(243, 244, 246, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  flex-shrink: 0;
}

.icon.top {
  background: rgba(255, 247, 237, 1);
  border-color: rgba(255, 237, 213, 1);
}

.icon__img {
  width: 100%;
  height: 100%;
}

.icon__fallback {
  font-size: 34rpx;
  font-weight: 900;
  color: rgba(156, 163, 175, 1);
}

.content {
  flex: 1;
  min-width: 0;
}

.head {
  align-items: flex-end;
  margin-bottom: 12rpx;
}

.name {
  font-size: 26rpx;
  font-weight: 900;
  color: rgba(107, 114, 128, 1);
}

.name.top {
  color: rgba(17, 24, 39, 1);
}

.count {
  font-size: 22rpx;
  font-weight: 900;
  color: rgba(156, 163, 175, 1);
  margin-left: 12rpx;
  flex-shrink: 0;
}

.count.top {
  color: rgba(249, 115, 22, 1);
}

.bar {
  width: 100%;
  height: 18rpx;
  border-radius: 9999rpx;
  background: rgba(243, 244, 246, 1);
  overflow: hidden;
}

.bar__fill {
  height: 100%;
  border-radius: 9999rpx;
  background: rgba(156, 163, 175, 0.9);
}

.bar__fill.top1 {
  background: linear-gradient(90deg, #fbbf24, #f97316);
}

.bar__fill.top2 {
  background: rgba(251, 146, 60, 1);
}

.bar__fill.top3 {
  background: rgba(253, 186, 116, 1);
}

.bar__fill.other {
  background: rgba(209, 213, 219, 1);
}
