.page {
  min-height: 100vh;
  background: #f9fafb;
}

.body {
  height: calc(100vh - 140rpx);
}

.wrap {
  padding: 24rpx 32rpx 240rpx;
}

.row-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: var(--shadow-sm);
  margin-bottom: 18rpx;
  align-items: center;
}

.face {
  width: 80rpx;
  height: 80rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 18rpx;
}

.face.boy {
  background: rgba(59, 130, 246, 0.12);
}
.face.girl {
  background: rgba(236, 72, 153, 0.12);
}
.face.unk {
  background: rgba(107, 114, 128, 0.1);
}

.meta .name {
  font-weight: 900;
  color: var(--text-primary);
  font-size: 28rpx;
}

.meta .sub {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: var(--text-muted);
}

.form {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  border: 4rpx solid rgba(249, 115, 22, 0.15);
  box-shadow: var(--shadow-sm);
}

.form__title {
  font-weight: 900;
  color: var(--brand);
  font-size: 24rpx;
  margin-bottom: 18rpx;
}

.field {
  margin-bottom: 18rpx;
}

.label {
  font-size: 20rpx;
  color: var(--text-muted);
  margin-left: 6rpx;
  margin-bottom: 8rpx;
}

.input {
  background: #f3f4f6;
  border-radius: 18rpx;
  padding: 18rpx 20rpx;
  font-size: 26rpx;
  color: var(--text-primary);
}

.gender {
  gap: 18rpx;
}

.g {
  flex: 1;
  border-radius: 18rpx;
  padding: 18rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  border: 2rpx solid transparent;
  background: #f3f4f6;
  color: var(--text-secondary);
}

.g.on.boy {
  background: rgba(59, 130, 246, 0.12);
  border-color: rgba(59, 130, 246, 0.25);
  color: #2563eb;
}

.g.on.girl {
  background: rgba(236, 72, 153, 0.12);
  border-color: rgba(236, 72, 153, 0.25);
  color: #db2777;
}

.g__icon {
  font-size: 32rpx;
}

.g__text {
  font-weight: 900;
  font-size: 24rpx;
}

.date {
  background: #f3f4f6;
  border-radius: 18rpx;
  padding: 18rpx 20rpx;
  font-size: 26rpx;
  color: var(--text-primary);
}

.actions {
  gap: 18rpx;
  margin-top: 16rpx;
}

.save {
  flex: 1;
  background: var(--brand);
  color: #fff;
  border-radius: 18rpx;
  padding: 18rpx 0;
  font-size: 26rpx;
  font-weight: 900;
  box-shadow: var(--shadow-brand);
}

.cancel {
  background: transparent;
  color: var(--text-muted);
  font-size: 26rpx;
}

.add {
  margin-top: 18rpx;
  width: 100%;
  border: 2rpx dashed #d1d5db;
  color: var(--text-muted);
  border-radius: 24rpx;
  padding: 24rpx 0;
  font-size: 26rpx;
  font-weight: 900;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.add__icon {
  font-size: 32rpx;
}

