<view class="page safe-bottom">
  <view class="status" style="height: {{statusBarHeight}}px;" />

  <view class="header">
    <view class="profile row">
      <image class="avatar" src="{{avatarUrl}}" mode="aspectFill" />
      <view class="profile__meta col">
        <view class="nickname">{{nickname}}</view>
        <view class="subline">
          <view wx:if="{{isSubscribed && !isExpired}}" class="badge ok">
            <text class="badge__icon">📅</text>
            <text>{{subscriptionEndAt}} 到期</text>
          </view>
          <view wx:else class="badge warn" bindtap="goSubscription">
            <view wx:if="{{isSubscribed && isExpired}}" class="warn__text">已过期 ({{subscriptionEndAt}})</view>
            <view wx:else class="warn__text">未订阅会员</view>
            <view class="warn__cta">去订阅 &gt;</view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="menu">
    <view class="item" bindtap="goChildren">
      <view class="item__left row">
        <view class="dot blue">👪</view>
        <view class="col">
          <view class="item__title">孩子管理</view>
          <view class="item__sub">添加或修改孩子信息</view>
        </view>
      </view>
      <ui-icon name="chevronRight" size="{{22}}" />
    </view>

    <view class="item" bindtap="goHistory">
      <view class="item__left row">
        <view class="dot orange">📅</view>
        <view class="col">
          <view class="item__title">自测记录</view>
          <view class="item__sub">查看历史自测分析与建议</view>
        </view>
      </view>
      <ui-icon name="chevronRight" size="{{22}}" />
    </view>

    <view class="item" bindtap="goGrowth">
      <view class="item__left row">
        <view class="dot purple">📈</view>
        <view class="col">
          <view class="item__title">成长报告</view>
          <view class="item__sub">五维能力发展趋势分析</view>
        </view>
      </view>
      <ui-icon name="chevronRight" size="{{22}}" />
    </view>

    <view class="item" bindtap="goSubscription">
      <view class="item__left row">
        <view class="dot green">¥</view>
        <view class="col">
          <view class="item__title">订阅管理</view>
          <view class="item__sub">查看会员状态或续费</view>
        </view>
      </view>
      <ui-icon name="chevronRight" size="{{22}}" />
    </view>

    <view class="item" bindtap="goAgreement">
      <view class="item__left row">
        <view class="dot gray">📄</view>
        <view class="col">
          <view class="item__title">用户协议</view>
          <view class="item__sub">服务条款与隐私政策</view>
        </view>
      </view>
      <ui-icon name="chevronRight" size="{{22}}" />
    </view>
  </view>

  <view class="footer">
    <text class="ver">Howtotalk App v1.2.0</text>
  </view>
</view>

