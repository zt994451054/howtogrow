.page {
  min-height: 100vh;
  background: #fff;
}

.status {
  background: var(--brand);
}

.top {
  background: var(--brand);
  padding: 12rpx 24rpx 44rpx;
  color: #fff;
  position: relative;
}

.back {
  position: absolute;
  left: 16rpx;
  top: 8rpx;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.9);
}

.center {
  margin-top: 50rpx;
  align-items: center;
}

.t1 {
  font-size: 34rpx;
  font-weight: 900;
}

.t2 {
  margin-top: 10rpx;
  font-size: 24rpx;
  padding: 8rpx 18rpx;
  border-radius: var(--radius-pill);
  background: rgba(255, 255, 255, 0.2);
}

.t2.warn {
  background: rgba(239, 68, 68, 0.22);
}

.body {
  height: calc(100vh - 360rpx);
}

.panel {
  padding: 0 32rpx 240rpx;
  background: #fff;
  margin-top: -26rpx;
  border-top-left-radius: 48rpx;
  border-top-right-radius: 48rpx;
  box-shadow: 0 -10rpx 24rpx rgba(17, 24, 39, 0.08);
}

.h3 {
  padding: 36rpx 0 18rpx;
  font-weight: 900;
  color: var(--text-primary);
  font-size: 26rpx;
}

.plan {
  border: 4rpx solid rgba(243, 244, 246, 1);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.plan.on {
  border-color: var(--brand);
  background: rgba(249, 115, 22, 0.08);
}

.plan__name {
  font-weight: 900;
  color: var(--text-primary);
  font-size: 26rpx;
}

.plan__sub {
  margin-top: 8rpx;
  font-size: 20rpx;
  color: var(--text-muted);
}

.plan__price {
  font-weight: 900;
  color: #ea580c;
  font-size: 34rpx;
}

.empty {
  color: var(--text-muted);
  padding: 40rpx 0;
  text-align: center;
  font-size: 24rpx;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 32rpx 28rpx;
  border-top: 1rpx solid rgba(243, 244, 246, 0.7);
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
}

.buy {
  width: 100%;
  border-radius: var(--radius-pill);
  padding: 26rpx 0;
  font-size: 30rpx;
  font-weight: 900;
}

.buy.off {
  background: #e5e7eb;
  color: #9ca3af;
}

.buy.on {
  background: var(--brand);
  color: #fff;
  box-shadow: var(--shadow-brand);
}

