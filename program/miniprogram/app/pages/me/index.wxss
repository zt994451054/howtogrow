.page {
  min-height: 100vh;
  background: #fff;
  padding-bottom: 220rpx;
}

.status {
  background: #fff;
}

.header {
  background: #fff;
  padding: 40rpx 40rpx 32rpx;
}

.profile {
  align-items: center;
  gap: 28rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 9999rpx;
  border: 2rpx solid rgba(17, 24, 39, 0.06);
  background: #f3f4f6;
}

.profile__meta {
  flex: 1;
}

.nickname {
  font-size: 38rpx;
  font-weight: 800;
  color: var(--text-primary);
}

.edit {
  margin-top: 12rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: var(--brand);
}

.menu {
  margin-top: 24rpx;
  background: #fff;
  border-top: 1rpx solid var(--border);
  border-bottom: 1rpx solid var(--border);
}

.item {
  align-items: center;
  padding: 34rpx 40rpx;
}

.item__title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-primary);
}

.item__sub {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 8rpx;
}

.item__sub.warn {
  color: var(--text-secondary);
}

.divider {
  height: 1rpx;
  background: var(--border);
  margin-left: 40rpx;
}

.footer {
  margin-top: 60rpx;
  text-align: center;
}

.ver {
  font-size: 18rpx;
  color: rgba(156, 163, 175, 0.7);
}
