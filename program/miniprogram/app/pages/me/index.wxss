.page {
  min-height: 100vh;
  background: #fff;
  padding-bottom: 220rpx;
}

.status {
  background: #fff;
  height: var(--page-nav-height);
}

.header {
  background: #fff;
  padding: var(--page-padding) var(--page-padding) 16rpx;
}

.profile {
  align-items: center;
  gap: 16rpx;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
}

.profile__meta {
  flex: 1;
  justify-content: center;
  gap: 4rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--text-primary);
  line-height: 1.2;
}

.edit {
  margin-top: 0;
  font-size: 24rpx;
  font-weight: 600;
  color: var(--brand);
  line-height: 1.2;
}

.menu {
  margin-top: var(--section-gap);
  background: #fff;
  border-top: 1rpx solid var(--border);
  border-bottom: 1rpx solid var(--border);
}

.item {
  align-items: center;
  padding: 34rpx var(--page-padding);
}

.item__title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-primary);
}

.item__sub {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 8rpx;
}

.item__sub.warn {
  color: var(--text-secondary);
}

.divider {
  height: 1rpx;
  background: var(--border);
  margin-left: var(--page-padding);
}

.footer {
  margin-top: 60rpx;
  text-align: center;
}

.ver {
  font-size: 18rpx;
  color: rgba(156, 163, 175, 0.7);
}
