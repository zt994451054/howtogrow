.page {
  min-height: 100vh;
  background: #fff;
}

.body {
  height: calc(100vh - 140rpx);
}

.wrap {
  padding: 24rpx 32rpx 240rpx;
}

.title {
  margin-top: 10rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 1rpx;
}

.meta {
  margin-top: 10rpx;
  color: var(--text-muted);
  font-size: 20rpx;
}

.meta__dot {
  margin: 0 10rpx;
}

.section {
  margin-top: 28rpx;
}

.h3 {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin: 24rpx 0 12rpx;
}

.block {
  margin-top: 10rpx;
}

.p {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 42rpx;
  white-space: pre-line;
}

.ul {
  margin-top: 10rpx;
}

.li {
  display: flex;
  flex-direction: row;
  gap: 10rpx;
  margin: 8rpx 0;
  color: var(--text-secondary);
  font-size: 24rpx;
  line-height: 42rpx;
}

.li__dot {
  width: 22rpx;
  flex-shrink: 0;
  color: var(--brand);
  font-weight: 600;
}

.li__text {
  flex: 1;
  white-space: pre-line;
}

.contact {
  margin-top: 14rpx;
  background: #f9fafb;
  border: 2rpx solid rgba(243, 244, 246, 1);
  border-radius: 24rpx;
  padding: 18rpx 18rpx;
}

.contact__label {
  font-size: 22rpx;
  color: var(--text-muted);
  font-weight: 800;
}

.contact__right {
  align-items: center;
  gap: 12rpx;
}

.contact__value {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.contact__btn {
  padding: 8rpx 14rpx;
  border-radius: 9999rpx;
  background: rgba(249, 115, 22, 0.12);
  color: var(--brand);
  font-size: 20rpx;
  font-weight: 600;
}

.note {
  margin-top: 16rpx;
  color: rgba(156, 163, 175, 0.9);
  font-size: 20rpx;
  line-height: 34rpx;
  background: rgba(249, 115, 22, 0.06);
  border-radius: 20rpx;
  padding: 14rpx 16rpx;
  white-space: pre-line;
}
