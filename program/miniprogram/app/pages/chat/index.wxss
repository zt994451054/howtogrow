.page {
  min-height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
  padding-bottom: 0;
  box-sizing: border-box;
}

.status {
  background: var(--brand);
  height: var(--page-nav-height);
}

.header {
  padding: var(--page-padding) var(--page-padding) 16rpx;
  background: var(--brand);
  align-items: center;
}

.icon-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  box-shadow: none;
  color: #fff;
}

.menu-icon {
  width: 60rpx;
  height: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.menu-icon__line {
  width: 100%;
  height: 4rpx;
  border-radius: 9999rpx;
  background: currentColor;
}

.title {
  font-size: 32rpx;
  font-weight: 900;
  line-height: 1.2;
  color: #fff;
  text-transform: none;
}

.drawer-layer {
  position: fixed;
  inset: 0;
  z-index: 40;
  pointer-events: none;
}

.drawer-layer.on {
  pointer-events: auto;
}

.drawer-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.18);
  backdrop-filter: blur(8px);
  opacity: 0;
  transition: opacity 180ms ease;
}

.drawer-layer.on .drawer-mask {
  opacity: 1;
}

.drawer {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 75%;
  background: #fff;
  z-index: 50;
  box-shadow: none;
  transform: translateX(-110%);
  transition: transform 220ms ease-out;
  display: flex;
  flex-direction: column;
}

.drawer-layer.on .drawer {
  transform: translateX(0);
  box-shadow: 0 30rpx 60rpx rgba(17, 24, 39, 0.2);
}

.drawer__head {
  background: var(--brand);
  padding: 48rpx var(--page-padding) 32rpx;
  color: #fff;
}

.drawer__head .a {
  align-items: center;
  gap: 18rpx;
}

.logo {
  width: 64rpx;
  height: 64rpx;
  border-radius: 9999rpx;
  background: #fff;
  position: relative;
}

.logo__smile {
  position: absolute;
  left: 16rpx;
  right: 16rpx;
  top: 28rpx;
  height: 22rpx;
  border-bottom: 6rpx solid var(--brand);
  border-radius: 0 0 200rpx 200rpx;
}

.logo__tail {
  position: absolute;
  right: 20rpx;
  top: 14rpx;
  width: 6rpx;
  height: 20rpx;
  background: var(--brand);
  border-radius: 6rpx;
}

.drawer__t1 {
  font-size: 32rpx;
  font-weight: 900;
}

.drawer__t2 {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: rgba(255, 237, 213, 0.9);
}

.drawer__body {
  flex: 1;
}

.new {
  width: 100%;
  text-align: left;
  padding: 22rpx var(--page-padding);
  border-radius: 24rpx;
  background: rgba(249, 115, 22, 0.10);
  color: #ea580c;
  font-size: 24rpx;
  font-weight: 900;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.new::after {
  border: none;
}

.tag {
  font-size: 20rpx;
  font-weight: 900;
  color: var(--text-muted);
  letter-spacing: 3rpx;
  text-transform: uppercase;
  padding: 0 var(--page-padding) 10rpx;
}

.quick {
  width: 100%;
  margin-top: 14rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 14rpx;
  margin-left: 106rpx;
  padding-right: var(--page-padding);
  box-sizing: border-box;
}

.quick__chip {
  display: inline-block;
  max-width: 620rpx;
  padding: 18rpx 26rpx;
  border-radius: 9999rpx;
  font-size: 24rpx;
  color: var(--text-primary);
  background: #fff;
  border: 1rpx solid rgba(15, 23, 42, 0.10);
  box-shadow: 0 10rpx 18rpx rgba(15, 23, 42, 0.04);
  text-align: left;
  line-height: 1.4;
  box-sizing: border-box;
}

.sess {
  width: 100%;
  text-align: left;
  padding: 22rpx var(--page-padding);
  border-radius: 24rpx;
  background: #fff;
  border: 2rpx solid transparent;
  color: var(--text-secondary);
  font-size: 24rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}

.sess::after {
  border: none;
}

.sess-empty {
  padding: 12rpx 10rpx;
  color: var(--text-muted);
  font-size: 22rpx;
}

.drawer__foot {
  padding: 20rpx var(--page-padding);
  text-align: center;
  font-size: 20rpx;
  color: var(--text-muted);
  position: relative;
}

.drawer__foot::before {
  content: "";
  position: absolute;
  left: var(--page-padding);
  right: var(--page-padding);
  top: 0;
  height: 1rpx;
  background: var(--border);
}

.messages {
  flex: 1;
  min-height: 0;
  background: #f7f7ff;
  padding: 36rpx var(--page-padding) 24rpx;
  border-top-left-radius: 56rpx;
  border-top-right-radius: 56rpx;
  box-shadow: 0 -14rpx 40rpx rgba(15, 23, 42, 0.08);
  overflow: hidden;
}

.msg {
  width: 100%;
}

.msg-list {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.bubble-row {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  gap: 18rpx;
  width: 100%;
}

.bubble-row.rev {
  flex-direction: row-reverse;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  flex-shrink: 0;
  overflow: hidden;
  background: #fff;
  border: 2rpx solid rgba(15, 23, 42, 0.06);
  box-shadow: 0 10rpx 18rpx rgba(15, 23, 42, 0.06);
}

.avatar__img {
  width: 100%;
  height: 100%;
  display: block;
}

.avatar.a-me {
  background: #fff;
}

.avatar.a-ai {
  background: #fff;
  border: none;
  box-shadow: none;
}

.bubble {
  max-width: 600rpx;
  padding: 26rpx 30rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  border-radius: 36rpx;
  box-shadow: 0 22rpx 44rpx rgba(15, 23, 42, 0.12);
  white-space: pre-line;
  word-break: break-word;
}

/* towxml 默认正文样式会带外边距，这里收敛到气泡内 */
.bubble.b-ai {
  white-space: normal;
}

.bubble.b-ai .h2w-light,
.bubble.b-ai .h2w-dark {
  background: transparent;
  background-color: transparent;
  color: inherit;
}

.bubble.b-ai .h2w__main {
  margin: 0;
  padding-top: 0;
}

.bubble.b-ai .h2w {
  font-size: 28rpx;
  line-height: 44rpx;
  text-align: left;
  color: rgba(255, 255, 255, 0.96);
}

.bubble.b-ai .h2w__p,
.bubble.b-ai .h2w__h1,
.bubble.b-ai .h2w__h2,
.bubble.b-ai .h2w__h3,
.bubble.b-ai .h2w__h4,
.bubble.b-ai .h2w__h5,
.bubble.b-ai .h2w__h6,
.bubble.b-ai .h2w__blockquote,
.bubble.b-ai .h2w__li,
.bubble.b-ai .h2w__a {
  color: inherit;
}

.bubble.b-me {
  background: #fff;
  color: var(--text-primary);
  border: 2rpx solid rgba(15, 23, 42, 0.06);
  border-top-right-radius: 12rpx;
}

.bubble.b-ai {
  background: var(--brand);
  color: #fff;
  border: none;
  border-top-left-radius: 12rpx;
}

.ai-content {
  position: relative;
  padding-bottom: 26rpx;
}

.ai-plain {
  white-space: pre-line;
}

.copy-btn {
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
  width: 44rpx;
  height: 44rpx;
  background: transparent;
  border: none;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.92);
}

.copy-icon {
  width: 36rpx;
  height: 36rpx;
  display: block;
}

.copy-btn--hover,
.copy-btn:active {
  opacity: 0.8;
}

.typing-hint {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.92);
}

.typing-hint__dots {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.typing-hint__dot {
  width: 10rpx;
  height: 10rpx;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 9999rpx;
  opacity: 0.25;
  animation: typing-blink 1.2s infinite ease-in-out;
}

.typing-hint__dot.d2 {
  animation-delay: 0.2s;
}

.typing-hint__dot.d3 {
  animation-delay: 0.4s;
}

@keyframes typing-blink {
  0%,
  80%,
  100% {
    opacity: 0.25;
  }
  40% {
    opacity: 1;
  }
}

.input {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 30;
  padding: 20rpx var(--page-padding) 24rpx;
  background: #fff;
  border-top: 1rpx solid var(--border);
  padding-bottom: 80rpx;
}

.box {
  background: #f3f4f6;
  border-radius: var(--radius-pill);
  padding: 10rpx 10rpx 10rpx 18rpx;
  align-items: center;
  gap: 12rpx;
}

.ai-tip {
  margin-bottom: 10rpx;
  font-size: 20rpx;
  color: var(--text-muted);
  text-align: center;
}

.ipt {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-primary);
}

.send {
  width: 76rpx;
  height: 76rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.send.off {
  background: #e5e7eb;
  color: #9ca3af;
}

.send.on {
  background: var(--brand);
  color: #fff;
  box-shadow: 0 10rpx 20rpx rgba(249, 115, 22, 0.2);
}

.dots {
  width: 120rpx;
  height: 64rpx;
  background: #e5e7eb;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  background: #9ca3af;
  border-radius: 9999rpx;
}
