.page {
  min-height: 100vh;
  background: #fff;
}

.body {
  background: #fff;
}

.wrap {
  padding: 28rpx 32rpx 240rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.greet {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-muted);
  font-weight: 700;
}

.quote {
 color: #e18638;
 font-weight: bold;
 font-size: 35.55rpx;
 text-align: left;
 line-height: 60.94rpx;
}

.timeline {
  position: relative;
  padding-left: 6rpx;
}

.timeline__line {
  position: absolute;
  left: 34rpx;
  top: 30rpx;
  bottom: 30rpx;
  width: 0;
  border-left: 4rpx dashed rgba(229, 231, 235, 1);
}

.item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  gap: 18rpx;
  padding: 18rpx 0 30rpx;
  position: relative;
}

.item-last {
  padding-bottom: 0;
}

.item__icon {
  z-index: 2;
  width: 62rpx;
  height: 62rpx;
  border-radius: 9999rpx;
  background: rgba(249, 250, 251, 1);
  border: 4rpx solid rgba(243, 244, 246, 1);
  color: rgba(156, 163, 175, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  overflow: hidden;
}

.item__icon.on {
  border-color: rgba(255, 237, 213, 1);
  background: rgba(249, 115, 22, 0.10);
  color: rgba(249, 115, 22, 1);
}

.item__icon-text {
  font-size: 30rpx;
  line-height: 1;
  font-weight: 900;
}

.item__icon-img {
  width: 100%;
  height: 100%;
  display: block;
}

.obs-icon {
  width: 34rpx;
  height: 34rpx;
  position: relative;
  color: currentColor;
}

.obs-icon__status {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.obs-icon__status-eye {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: currentColor;
  border-radius: 9999rpx;
  top: 10rpx;
}

.obs-icon__status-eye.left {
  left: 9rpx;
}

.obs-icon__status-eye.right {
  right: 9rpx;
}

.obs-icon__status-mouth {
  position: absolute;
  left: 7rpx;
  top: 16rpx;
  width: 20rpx;
  height: 12rpx;
  border: 3rpx solid currentColor;
  border-top: none;
  border-left-color: transparent;
  border-right-color: transparent;
  border-radius: 0 0 24rpx 24rpx;
}

.obs-icon__troubles {
  position: absolute;
  left: 4rpx;
  top: 6rpx;
  width: 26rpx;
  height: 22rpx;
  border: 3rpx solid currentColor;
  border-radius: 8rpx;
}

.obs-icon__troubles-bump {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  border: 3rpx solid currentColor;
  border-radius: 9999rpx;
  background: transparent;
}

.obs-icon__troubles-bump.top {
  top: -8rpx;
  left: 8rpx;
}

.obs-icon__troubles-bump.right {
  right: -8rpx;
  top: 6rpx;
}

.obs-icon__mirror {
  position: absolute;
  left: 6rpx;
  top: 5rpx;
  width: 22rpx;
  height: 26rpx;
  border: 3rpx solid currentColor;
  border-radius: 6rpx;
}

.obs-icon__mirror-clip {
  position: absolute;
  left: 5rpx;
  top: -7rpx;
  width: 12rpx;
  height: 8rpx;
  border: 3rpx solid currentColor;
  border-radius: 6rpx;
  background: transparent;
}

.obs-icon__mirror-line {
  position: absolute;
  left: 4rpx;
  right: 4rpx;
  height: 3rpx;
  background: currentColor;
  border-radius: 9999rpx;
}

.obs-icon__mirror-line.l1 {
  top: 8rpx;
}

.obs-icon__mirror-line.l2 {
  top: 14rpx;
}

.obs-icon__mirror-line.l3 {
  top: 20rpx;
  width: 12rpx;
}

.obs-icon__diary {
  position: absolute;
  left: 4rpx;
  top: 7rpx;
  width: 26rpx;
  height: 22rpx;
}

.obs-icon__diary-page {
  position: absolute;
  top: 0;
  width: 13rpx;
  height: 22rpx;
  border: 3rpx solid currentColor;
  border-radius: 6rpx;
}

.obs-icon__diary-page.left {
  left: 0;
  border-right: none;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}

.obs-icon__diary-page.right {
  right: 0;
  border-left: none;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

.obs-icon__diary-seam {
  position: absolute;
  left: 13rpx;
  top: 0;
  width: 3rpx;
  height: 22rpx;
  background: currentColor;
  opacity: 0.35;
}

.obs-icon__expert {
  position: absolute;
  left: 3rpx;
  top: 7rpx;
  width: 28rpx;
  height: 22rpx;
}

.obs-icon__expert-cap {
  position: absolute;
  left: 6rpx;
  top: 0;
  width: 16rpx;
  height: 16rpx;
  border: 3rpx solid currentColor;
  transform: rotate(45deg);
  border-radius: 4rpx;
}

.obs-icon__expert-base {
  position: absolute;
  left: 4rpx;
  top: 14rpx;
  width: 20rpx;
  height: 5rpx;
  background: currentColor;
  border-radius: 9999rpx;
}

.obs-icon__expert-tassel {
  position: absolute;
  right: 2rpx;
  top: 6rpx;
  width: 3rpx;
  height: 14rpx;
  background: currentColor;
  border-radius: 9999rpx;
}

.obs-icon__expert-tassel-dot {
  position: absolute;
  right: -1rpx;
  top: 18rpx;
  width: 8rpx;
  height: 8rpx;
  background: currentColor;
  border-radius: 9999rpx;
}

.item__body {
  flex: 1;
  padding-top: 6rpx;
  min-width: 0;
}

.item__title {
  font-size: 28rpx;
  font-weight: 900;
  color: rgba(17, 24, 39, 1);
}

.item__desc {
  margin-top: 8rpx;
  font-size: 22rpx;
  line-height: 1.6;
  color: rgba(156, 163, 175, 1);
}

.item.done .item__desc {
  color: rgba(107, 114, 128, 1);
}

.item.todo .item__title {
  color: rgba(209, 213, 219, 1);
}

.item.todo .item__desc {
  color: rgba(209, 213, 219, 1);
}

.item.todo .item__icon {
  color: rgba(209, 213, 219, 1);
}

.loading {
  color: var(--text-muted);
  text-align: center;
  font-size: 24rpx;
  font-weight: 800;
  padding: 18rpx 0 0;
}

.sheet {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: all 0.25s;
}

.sheet.show {
  visibility: visible;
  opacity: 1;
}

.sheet__mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(17, 24, 39, 0.45);
}

.sheet__panel {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.25s;
  padding: 28rpx 28rpx 28rpx;
}

.sheet.show .sheet__panel {
  transform: translateY(0);
}

.sheet__head {
  align-items: center;
}

.sheet__title {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--text-primary);
}

.sheet__close {
  font-size: 44rpx;
  line-height: 1;
  color: var(--text-muted);
  padding: 6rpx 10rpx;
}

.sheet__sub {
  margin-top: 10rpx;
  color: var(--text-muted);
  font-size: 24rpx;
  font-weight: 700;
}

.sheet__loading {
  padding: 40rpx 0;
  text-align: center;
  color: var(--text-muted);
  font-size: 24rpx;
  font-weight: 700;
}

.status-grid {
  margin-top: 22rpx;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 12rpx;
}

.status-item {
  background: rgba(243, 244, 246, 0.9);
  border-radius: 16rpx;
  padding: 14rpx 0 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  color: var(--text-secondary);
}

.status-item.on {
  background: rgba(249, 115, 22, 0.10);
  color: rgba(249, 115, 22, 1);
}

.status-emoji {
  font-size: 34rpx;
  line-height: 1;
}

.status-text {
  font-size: 22rpx;
  font-weight: 900;
}

.trouble-grid {
  margin-top: 22rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.trouble-item {
  background: rgba(243, 244, 246, 0.9);
  border-radius: 16rpx;
  padding: 16rpx 0 14rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  color: var(--text-secondary);
}

.trouble-item.on {
  background: rgba(17, 24, 39, 1);
  color: #fff;
}

.trouble-logo {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
}

.trouble-name {
  font-size: 24rpx;
  font-weight: 900;
  text-align: center;
}

.diary-card {
  margin-top: 22rpx;
  background: rgba(249, 250, 251, 1);
  border-radius: 18rpx;
  padding: 18rpx 18rpx 16rpx;
}

.diary-input {
  width: 100%;
  min-height: 180rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-primary);
}

.diary-media {
  margin-top: 16rpx;
  gap: 16rpx;
  align-items: center;
}

.diary-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  background: rgba(243, 244, 246, 1);
}

.diary-thumb__img {
  width: 100%;
  height: 100%;
}

.diary-thumb__remove {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 9999rpx;
  background: rgba(17, 24, 39, 0.7);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.diary-add {
  background: rgba(243, 244, 246, 0.9) !important;
  color: var(--text-secondary) !important;
  border-radius: 16rpx;
  font-weight: 900;
  font-size: 24rpx;
  padding: 18rpx 22rpx;
}

.diary-add::after {
  border: none;
}

.overlay {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1200;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.overlay__safe {
  flex-shrink: 0;
}

.overlay__header {
  padding: 12rpx 24rpx 18rpx;
  align-items: center;
}

.overlay__back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: rgba(55, 65, 81, 1);
  font-weight: 900;
}

.overlay__title {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: 900;
  color: rgba(17, 24, 39, 1);
}

.overlay__spacer {
  width: 60rpx;
  height: 60rpx;
}

.overlay__quote {
  padding: 20rpx 64rpx 10rpx;
  text-align: center;
  color: rgba(249, 115, 22, 1);
  font-size: 28rpx;
  font-weight: 900;
  line-height: 1.6;
  white-space: pre-line;
}

.mood-area {
  flex: 1;
  min-height: 0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mood-orbit {
  position: relative;
  width: 680rpx;
  height: 680rpx;
}

.mood-center {
  position: absolute;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.mood-center__circle {
  width: 240rpx;
  height: 240rpx;
  border-radius: 9999rpx;
  background: rgba(249, 115, 22, 0.10);
  border: 8rpx solid #fff;
  box-shadow: 0 24rpx 60rpx rgba(249, 115, 22, 0.20);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.mood-center__emoji {
  font-size: 120rpx;
  line-height: 1;
}

.mood-center__img {
  width: 176rpx;
  height: 176rpx;
  border-radius: 9999rpx;
}

.mood-center__text {
  margin-top: 40rpx;
  text-align: center;
}

.mood-center__line {
  font-size: 26rpx;
  font-weight: 900;
  color: rgba(31, 41, 55, 1);
  letter-spacing: 2rpx;
  margin-top: 10rpx;
}

.mood-center__line:first-child {
  margin-top: 0;
}

.mood-option {
  position: absolute;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.mood-option__circle {
  width: 112rpx;
  height: 112rpx;
  border-radius: 9999rpx;
  background: rgba(249, 115, 22, 0.10);
  border: 2rpx solid transparent;
  box-shadow: 0 10rpx 20rpx rgba(17, 24, 39, 0.06);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.85;
  overflow: hidden;
}

.mood-option.on .mood-option__circle {
  border-color: rgba(249, 115, 22, 0.45);
  opacity: 1;
  transform: scale(1.06);
}

.mood-option__emoji {
  font-size: 54rpx;
  line-height: 1;
}

.mood-option__img {
  width: 92rpx;
  height: 92rpx;
  border-radius: 9999rpx;
}

.mood-option__label {
  font-size: 18rpx;
  font-weight: 900;
  color: rgba(156, 163, 175, 1);
}

.mood-option.on .mood-option__label {
  color: rgba(249, 115, 22, 1);
}

.overlay__footer {
  padding: 18rpx 40rpx 22rpx;
  border-top: 2rpx solid rgba(243, 244, 246, 0.8);
}

.overlay__scroll {
  flex: 1;
  min-height: 0;
  padding-bottom: 18rpx;
}

.overlay__btn {
  width: 100% !important;
  height: 92rpx;
  border-radius: 46rpx;
  background: rgba(249, 115, 22, 1) !important;
  color: #fff !important;
  font-size: 32rpx;
  font-weight: 900;
  box-shadow: 0 24rpx 48rpx rgba(249, 115, 22, 0.18);
}

.overlay__btn::after {
  border: none;
}

.overlay__btn--disabled {
  background: rgba(229, 231, 235, 1) !important;
  color: rgba(156, 163, 175, 1) !important;
  box-shadow: none;
}

.trouble-hero {
  padding: 12rpx 48rpx 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.trouble-hero__ball {
  width: 256rpx;
  height: 256rpx;
  border-radius: 9999rpx;
  background: rgba(255, 237, 213, 1);
  position: relative;
  overflow: hidden;
}

.trouble-hero__tile {
  position: absolute;
  width: 50%;
  height: 50%;
  opacity: 0.65;
}

.trouble-hero__tile.t1 {
  left: 0;
  top: 0;
  background: rgba(254, 215, 170, 1);
}

.trouble-hero__tile.t2 {
  right: 0;
  top: 0;
  background: rgba(255, 247, 237, 1);
}

.trouble-hero__tile.t3 {
  left: 0;
  bottom: 0;
  background: rgba(255, 247, 237, 1);
}

.trouble-hero__tile.t4 {
  right: 0;
  bottom: 0;
  background: rgba(254, 215, 170, 1);
}

.trouble-hero__bar {
  position: absolute;
  bottom: -6rpx;
  right: 48rpx;
  width: 72rpx;
  height: 112rpx;
  background: rgba(249, 115, 22, 1);
  border-radius: 9999rpx 9999rpx 0 0;
  transform: rotate(12deg);
  border: 4rpx solid #fff;
}

.trouble-hero__title {
  margin-top: 18rpx;
  text-align: center;
  color: rgba(249, 115, 22, 1);
  font-size: 28rpx;
  font-weight: 900;
  line-height: 1.6;
  white-space: pre-line;
}

.trouble-hero__title .weak {
  color: rgba(251, 146, 60, 1);
}

.trouble-select-grid {
  padding: 10rpx 44rpx 10rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx 24rpx;
}

.trouble-chip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.trouble-chip__circle {
  width: 160rpx;
  height: 160rpx;
  border-radius: 9999rpx;
  background: rgba(249, 250, 251, 1);
  border: 2rpx solid rgba(243, 244, 246, 1);
  color: rgba(156, 163, 175, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.trouble-chip__circle.on {
  background: #fff;
  border: 6rpx solid rgba(249, 115, 22, 1);
  color: rgba(249, 115, 22, 1);
  transform: scale(1.04);
  box-shadow: 0 0 0 4rpx rgba(249, 115, 22, 0.18), 0 12rpx 26rpx rgba(249, 115, 22, 0.14);
}

.trouble-chip__logo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 9999rpx;
}

.trouble-chip__fallback {
  font-size: 44rpx;
  font-weight: 900;
  line-height: 1;
}

.trouble-chip__label {
  font-size: 22rpx;
  font-weight: 900;
  color: rgba(107, 114, 128, 1);
  text-align: center;
}

.trouble-chip__label.on {
  color: rgba(249, 115, 22, 1);
}

.diary-wrap {
  padding: 24rpx 40rpx 10rpx;
}

.diary-prompt__head,
.diary-photo__head {
  align-items: center;
  gap: 12rpx;
  padding: 0 6rpx;
  margin-bottom: 12rpx;
}

.diary-prompt__spark {
  color: rgba(251, 146, 60, 1);
  font-weight: 900;
  font-size: 24rpx;
}

.diary-prompt__label,
.diary-photo__label {
  color: rgba(107, 114, 128, 1);
  font-size: 22rpx;
  font-weight: 900;
}

.diary-prompt__box {
  background: rgba(255, 249, 242, 1);
  border-radius: 24rpx;
  padding: 22rpx 22rpx 18rpx;
  border: 2rpx solid rgba(254, 215, 170, 0.65);
}

.diary-prompt__text {
  color: rgba(55, 65, 81, 1);
  font-size: 26rpx;
  font-weight: 700;
  line-height: 1.6;
}

.diary-prompt__actions {
  margin-top: 18rpx;
  gap: 12rpx;
  align-items: center;
  justify-content: flex-start;
}

.diary-prompt__use {
  width: auto !important;
  flex: 0 0 auto;
  margin: 0;
  background: rgba(249, 115, 22, 1) !important;
  color: #fff !important;
  border-radius: 9999rpx;
  font-size: 22rpx;
  font-weight: 900;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 26rpx;
}

.diary-prompt__use::after {
  border: none;
}

.diary-prompt__next {
  width: auto !important;
  flex: 0 0 auto;
  margin: 0;
  background: transparent !important;
  color: rgba(251, 146, 60, 1) !important;
  font-size: 22rpx;
  font-weight: 900;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 22rpx;
  border-radius: 9999rpx;
  border: 2rpx solid rgba(251, 146, 60, 0.35);
}

.diary-prompt__next::after {
  border: none;
}

.diary-editor {
  margin-top: 26rpx;
  position: relative;
}

.diary-editor__input {
  width: 100%;
  min-height: 220rpx;
  padding: 22rpx 22rpx 54rpx;
  background: rgba(249, 250, 251, 1);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: rgba(31, 41, 55, 1);
  line-height: 1.6;
}

.diary-editor__count {
  position: absolute;
  right: 24rpx;
  bottom: 16rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: rgba(156, 163, 175, 1);
}

.diary-photo {
  margin-top: 30rpx;
  padding-bottom: 20rpx;
}

.diary-photo__camera {
  font-size: 24rpx;
}

.diary-photo__preview {
  width: 260rpx;
  height: 260rpx;
  border-radius: 32rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 12rpx 26rpx rgba(17, 24, 39, 0.06);
}

.diary-photo__img {
  width: 100%;
  height: 100%;
}

.diary-photo__remove {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 9999rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.diary-photo__add {
  width: 260rpx !important;
  height: 260rpx;
  border-radius: 32rpx;
  background: rgba(249, 250, 251, 1) !important;
  border: 4rpx dashed rgba(229, 231, 235, 1) !important;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  color: rgba(156, 163, 175, 1) !important;
  margin: 0;
}

.diary-photo__add::after {
  border: none;
