.page {
  min-height: 100vh;
  background: #fff;
}

.body {
  background: #fff;
}

.wrap {
  padding: var(--section-gap) var(--page-padding) 240rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.greet {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-muted);
  font-weight: 700;
}

.quote {
 color: #e18638;
 font-weight: bold;
 font-size: 35.55rpx;
 text-align: left;
 line-height: 60.94rpx;
}

.timeline {
  position: relative;
  padding-left: 0;
}

.timeline__line {
  position: absolute;
  left: 70rpx;
  top: 70rpx;
  bottom: 70rpx;
  width: 8rpx;
  background: #e18638;
  border-radius: 9999rpx;
  z-index: 1;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  gap: 28rpx;
  padding: 0 0 72rpx;
  position: relative;
}

.item-last {
  padding-bottom: 0;
}

.item__icon {
  position: relative;
  z-index: 2;
  width: 152rpx;
  height: 152rpx;
  border-radius: 9999rpx;
  background: rgba(252, 232, 220, 1);
  flex-shrink: 0;
  overflow: hidden;
}

.item__icon-img {
  width: 100%;
  height: 100%;
  display: block;
}

.item__icon-mask {
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.6);
}

.item__body {
  flex: 1;
  padding-top: 16rpx;
  min-width: 0;
}

.item__title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-muted);
}

.item__desc {
  margin-top: 10rpx;
  font-size: 26rpx;
  line-height: 1.55;
  color: var(--text-muted);
}

.item.done .item__title {
  color: var(--text-ink);
}

.item.done .item__desc {
  color: var(--text-ink-muted);
}

.timeline--muted .timeline__line {
  background: var(--text-muted);
}

.item.todo .item__icon-img {
  filter: grayscale(1);
}

.loading {
  color: var(--text-muted);
  text-align: center;
  font-size: 24rpx;
  font-weight: 800;
  padding: 18rpx 0 0;
}

.sheet {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: all 0.25s;
}

.sheet.show {
  visibility: visible;
  opacity: 1;
}

.sheet__mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(17, 24, 39, 0.45);
}

.sheet__panel {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.25s;
  padding: 28rpx 28rpx 28rpx;
}

.sheet.show .sheet__panel {
  transform: translateY(0);
}

.sheet__head {
  align-items: center;
}

.sheet__title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.sheet__close {
  font-size: 44rpx;
  line-height: 1;
  color: var(--text-muted);
  padding: 6rpx 10rpx;
}

.sheet__sub {
  margin-top: 10rpx;
  color: var(--text-muted);
  font-size: 24rpx;
  font-weight: 700;
}

.sheet__loading {
  padding: 40rpx 0;
  text-align: center;
  color: var(--text-muted);
  font-size: 24rpx;
  font-weight: 700;
}

.status-grid {
  margin-top: 22rpx;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 12rpx;
}

.status-item {
  background: rgba(243, 244, 246, 0.9);
  border-radius: 16rpx;
  padding: 14rpx 0 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  color: var(--text-secondary);
}

.status-item.on {
  background: rgba(249, 115, 22, 0.10);
  color: rgba(249, 115, 22, 1);
}

.status-emoji {
  font-size: 34rpx;
  line-height: 1;
}

.status-text {
  font-size: 22rpx;
  font-weight: 600;
}

.trouble-grid {
  margin-top: 22rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.trouble-item {
  background: rgba(243, 244, 246, 0.9);
  border-radius: 16rpx;
  padding: 16rpx 0 14rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  color: var(--text-secondary);
}

.trouble-item.on {
  background: rgba(17, 24, 39, 1);
  color: #fff;
}

.trouble-logo {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
}

.trouble-name {
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
}

.diary-card {
  margin-top: 22rpx;
  background: rgba(249, 250, 251, 1);
  border-radius: 18rpx;
  padding: 18rpx 18rpx 16rpx;
}

.diary-input {
  width: 100%;
  min-height: 180rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-primary);
}

.diary-media {
  margin-top: 16rpx;
  gap: 16rpx;
  align-items: center;
}

.diary-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  background: rgba(243, 244, 246, 1);
}

.diary-thumb__img {
  width: 100%;
  height: 100%;
}

.diary-thumb__remove {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 9999rpx;
  background: rgba(17, 24, 39, 0.7);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.diary-add {
  background: rgba(243, 244, 246, 0.9) !important;
  color: var(--text-secondary) !important;
  border-radius: 16rpx;
  font-weight: 600;
  font-size: 24rpx;
  padding: 18rpx 22rpx;
}

.diary-add::after {
  border: none;
}

.overlay {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1200;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.overlay__safe {
  flex-shrink: 0;
}

.overlay__header {
  padding: 12rpx 24rpx 18rpx;
  align-items: center;
}

.overlay__back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: rgba(55, 65, 81, 1);
  font-weight: 600;
}

.overlay__title {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: rgba(17, 24, 39, 1);
}

.overlay__spacer {
  width: 60rpx;
  height: 60rpx;
}

.overlay__quote {
  font-weight: bold;
font-size: 28rpx;
text-align: left;
color: #F08019;
margin-top: 50rpx;
margin-left: 48rpx;
}

.mood-area {
  flex: 1;
  min-height: 0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: -60rpx;
  padding: 0 var(--page-padding);
}

.mood-orbit {
  position: relative;
  width: 680rpx;
  height: 680rpx;
}

.mood-center {
  position: absolute;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.mood-center__circle {
  /* width: 240rpx;
  height: 240rpx;
  border-radius: 9999rpx;
  background: rgba(249, 115, 22, 0.10);
  border: 8rpx solid #fff;
  box-shadow: 0 24rpx 60rpx rgba(249, 115, 22, 0.20);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden; */
}

.mood-center__emoji {
  font-size: 188rpx;
  line-height: 1;
}

.mood-center__img {
  width: 176rpx;
  height: 176rpx;
  border-radius: 9999rpx;
}

.mood-center__text {
  text-align: center;

 color: #3c3c3be6;
 font-weight: bold;
 font-size: 20.36rpx;
 text-align: left;
 letter-spacing: 8rpx;
}

.mood-center__line {
  font-size: 26rpx;
  font-weight: 600;
  color: rgba(31, 41, 55, 1);
  letter-spacing: 2rpx;
  margin-top: 10rpx;
}

.mood-center__line:first-child {
  margin-top: 0;
}

.mood-option {
  position: absolute;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.mood-option__circle {
  width: 90rpx;
  height: 90rpx;
  border-radius: 9999rpx;
  background: rgba(249, 115, 22, 0.10);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.85;
  overflow: hidden;
}

.mood-option.on .mood-option__circle {
  border-color: rgba(249, 115, 22, 0.45);
  opacity: 1;
  transform: scale(1.06);
}

.mood-option__emoji {
  font-size: 54rpx;
  line-height: 1;
}

.mood-option__img {
  width: 92rpx;
  height: 92rpx;
  border-radius: 9999rpx;
}

.mood-option__label {
  font-size: 18rpx;
  font-weight: 600;
  color: #3C3C3B !important;
}

.mood-option.on .mood-option__label {
  color: rgba(249, 115, 22, 1);
}

.overlay__footer {
  padding: 18rpx 40rpx 22rpx;
  margin-bottom: 200rpx;
}

.overlay__scroll {
  flex: 1;
  min-height: 0;
  padding-bottom: 18rpx;
}

.overlay__btn {
  width: 100% !important;
  height: 92rpx;
  border-radius: 46rpx;
  background: rgba(249, 115, 22, 1) !important;
  color: #fff !important;
  font-size: 26rpx;
  font-weight: 600;
  line-height: 92rpx;
}

.overlay__btn::after {
  border: none;
}

.overlay__btn--disabled {
  opacity: 0.5;
}

.trouble-hero {
  padding: 80rpx 68rpx 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  gap: 32rpx;
}

.trouble-hero__ball {
  width: 216rpx;
  height: 216rpx;
  border-radius: 9999rpx;
  background: rgba(255, 237, 213, 1);
  position: relative;
  overflow: hidden;
}

.trouble-hero__tile {
  position: absolute;
  width: 50%;
  height: 50%;
  opacity: 0.65;
}

.trouble-hero__tile.t1 {
  left: 0;
  top: 0;
  background: rgba(254, 215, 170, 1);
}

.trouble-hero__tile.t2 {
  right: 0;
  top: 0;
  background: rgba(255, 247, 237, 1);
}

.trouble-hero__tile.t3 {
  left: 0;
  bottom: 0;
  background: rgba(255, 247, 237, 1);
}

.trouble-hero__tile.t4 {
  right: 0;
  bottom: 0;
  background: rgba(254, 215, 170, 1);
}

.trouble-hero__bar {
  position: absolute;
  bottom: -6rpx;
  right: 48rpx;
  width: 72rpx;
  height: 112rpx;
  background: rgba(249, 115, 22, 1);
  border-radius: 9999rpx 9999rpx 0 0;
  transform: rotate(12deg);
  border: 4rpx solid #fff;
}

.trouble-hero__title {
  margin-top: 0;
  flex: 1;
  min-width: 0;
  text-align: left;
  color: #F08019;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 48rpx;
  white-space: pre-line;
}

.trouble-hero__title .weak {
  color: rgba(251, 146, 60, 1);
}

.trouble-select-grid {
  padding: 10rpx 44rpx 10rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx 24rpx;
}

.trouble-chip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.trouble-chip__circle {
  width: 138rpx;
  height: 138rpx;
  border-radius: 9999rpx;
  /* background: rgba(249, 250, 251, 1); */
  /* border: 2rpx solid rgba(243, 244, 246, 1); */
  color: rgba(156, 163, 175, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.trouble-chip__circle.on {
  background: #fff;
  border: 1rpx solid rgba(249, 115, 22, 1);
  box-shadow: 0 0 0 4rpx rgba(249, 115, 22, 0.18), 0 12rpx 26rpx rgba(249, 115, 22, 0.14);
}

.trouble-chip__logo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 9999rpx;
}

.trouble-chip__fallback {
  font-size: 44rpx;
  font-weight: 600;
  line-height: 1;
}

.trouble-chip__label {
  font-size: 22rpx;
  color: rgba(107, 114, 128, 1);
  text-align: center;
}

.trouble-chip__label.on {
  color: rgba(249, 115, 22, 1);
}

.diary-wrap {
  padding: 24rpx 40rpx 10rpx;
}

.diary-prompt__head,
.diary-photo__head {
  align-items: center;
  gap: 12rpx;
  padding: 0 6rpx;
  margin-bottom: 12rpx;
}

.diary-prompt__spark {
  color: rgba(251, 146, 60, 1);
  font-weight: 600;
  font-size: 24rpx;
}

.diary-prompt__label,
.diary-photo__label {
  color: rgba(107, 114, 128, 1);
  font-size: 22rpx;
  font-weight: 600;
}

.diary-prompt__box {
  /* background: rgba(255, 249, 242, 1); */
  /* border-radius: 24rpx; */
  padding: 22rpx 22rpx 18rpx;
  /* border: 2rpx solid rgba(254, 215, 170, 0.65); */
}

.diary-prompt__text {
  color: rgba(55, 65, 81, 1);
  font-size: 26rpx;
  font-weight: 700;
  line-height: 1.6;
}

.diary-prompt__actions {
  margin-top: 40rpx;
  gap: 18rpx;
  align-items: center;
  justify-content: flex-start;
}

.diary-prompt__use {
  width: 144rpx;
  flex: 0 0 auto;
  margin: 0;
  background: rgba(249, 115, 22, 1) !important;
  color: #fff !important;
  border-radius: 9999rpx;
  font-size: 22rpx;
  font-weight: 600;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 26rpx;
}

.diary-prompt__use::after {
  border: none;
}

.diary-prompt__next {
  width: 144rpx;
  flex: 0 0 auto;
  margin: 0;
  background: transparent !important;
  color: rgba(251, 146, 60, 1) !important;
  font-size: 22rpx;
  font-weight: 600;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 26rpx;
  border-radius: 9999rpx;
  border: 2rpx solid rgba(249, 115, 22, 1);
}

.diary-prompt__next::after {
  border: none;
}

.diary-editor {
  margin-top: 26rpx;
  position: relative;
}

.diary-editor__input {
  width: 100%;
  min-height: 220rpx;
  padding: 22rpx 22rpx 54rpx;
  background: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: rgba(31, 41, 55, 1);
  line-height: 1.6;
  border: solid 2rpx #B2B2B2;
}

.diary-editor__count {
  position: absolute;
  right: 24rpx;
  bottom: 16rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: rgba(156, 163, 175, 1);
}

.diary-photo {
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  margin-left: calc(50% - 130rpx);
}

.diary-photo__camera {
  font-size: 24rpx;
}

.diary-photo__preview {
  width: 260rpx;
  height: 260rpx;
  border-radius: 32rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 12rpx 26rpx rgba(17, 24, 39, 0.06);
}

.diary-photo__img {
  width: 100%;
  height: 100%;
}

.diary-photo__remove {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 9999rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.diary-photo__add {
  width: 260rpx !important;
  height: 260rpx;
  border-radius: 32rpx;
  background: rgba(249, 250, 251, 1) !important;
  border: 4rpx dashed rgba(229, 231, 235, 1) !important;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  color: rgba(156, 163, 175, 1) !important;
  margin: 0;
}

.diary-photo__add::after {
  border: none;
}

.diary-photo__plus {
  font-size: 64rpx;
  font-weight: 600;
  opacity: 0.55;
  line-height: 1;
}

.diary-photo__add-text {
  font-size: 22rpx;
  font-weight: 600;
}
