.page {
  min-height: 100vh;
  background: #fff;
}

.status {
  background: #fff;
  height: var(--page-nav-height);
}

.header {
  padding: var(--page-padding) var(--page-padding) 16rpx;
  position: sticky;
  top: 0;
  z-index: 20;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
}

.a {
  align-items: center;
  gap: 16rpx;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
  background: var(--brand);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar__img {
  width: 100%;
  height: 100%;
}

.avatar__text {
  font-size: 24rpx;
  font-weight: 900;
}

.greet {
  font-size: 32rpx;
  color: var(--text-primary);
  line-height: 1.2;
}

.greet__name {
  font-weight: 900;
}

.greet__suffix {
  font-weight: 600;
}

.icon-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 0;
  background: transparent;
  box-shadow: none;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon {
  width: 60rpx;
  height: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.menu-icon__line {
  width: 100%;
  height: 4rpx;
  border-radius: 9999rpx;
  background: currentColor;
}

.menu-layer {
  position: fixed;
  inset: 0;
  z-index: 60;
}

.menu-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.18);
  opacity: 1;
}

.menu-pop {
  position: absolute;
  right: 24rpx;
  width: 320rpx;
  background: #fff;
  border-radius: var(--radius-16);
  box-shadow: var(--shadow-md);
  border: 2rpx solid rgba(17, 24, 39, 0.06);
  overflow: hidden;
  animation: fadeIn 0.18s ease-out forwards;
}

.menu-pop__title {
  font-size: 20rpx;
  color: var(--text-muted);
  padding: 18rpx 20rpx 10rpx;
}

.menu-pop__list {
  padding: 0 8rpx 10rpx;
}

.menu-item {
  width: 100%;
  text-align: left;
  background: transparent;
  border-radius: 14rpx;
  padding: 18rpx 16rpx;
  color: var(--text-secondary);
  font-size: 26rpx;
  font-weight: 700;
}

.menu-item::after {
  border: none;
}

.menu-item.on {
  background: rgba(249, 115, 22, 0.10);
  color: var(--brand);
}

.menu-item__row {
  align-items: center;
}

.menu-item__name {
  max-width: 240rpx;
}

.menu-item__dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 9999rpx;
  background: var(--brand);
}

.menu-item.add {
  color: var(--brand);
  font-weight: 900;
}

.body {
  background: #fff;
}

.wrap {
  padding: 24rpx var(--page-padding) 220rpx;
}

.empty {
  padding: 120rpx var(--page-padding) 220rpx;
}

.empty__logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 9999rpx;
  background: #fff;
  box-shadow: var(--shadow-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 28rpx;
}

.logo-dot {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
  background: var(--brand);
  position: relative;
}

.logo-smile {
  width: 34rpx;
  height: 18rpx;
  border: 6rpx solid #fff;
  border-top: 0;
  border-left: 0;
  border-right: 0;
  border-radius: 0 0 9999rpx 9999rpx;
  position: absolute;
  left: 18rpx;
  top: 26rpx;
}

.logo-tail {
  width: 18rpx;
  height: 28rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 9999rpx;
  position: absolute;
  right: -10rpx;
  bottom: 8rpx;
  transform: rotate(10deg);
}

.empty__title {
  font-size: 34rpx;
  font-weight: 800;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.empty__desc {
  font-size: 24rpx;
  color: var(--text-muted);
  text-align: center;
  white-space: pre-line;
  line-height: 40rpx;
  margin-bottom: 40rpx;
}

.btn-primary {
  background: var(--brand);
  color: #fff;
  padding: 24rpx 64rpx;
  border-radius: var(--radius-pill);
  font-size: 28rpx;
  font-weight: 800;
  box-shadow: var(--shadow-brand);
}

.btn-primary::after {
  border: none;
}

.banner-wrap {
  position: relative;
  width: calc(100% + var(--page-padding) + var(--page-padding));
  height: 280rpx;
  margin-left: calc(0px - var(--page-padding));
  margin-right: calc(0px - var(--page-padding));
  margin-bottom: 24rpx;
}

.banner {
  width: 100%;
  height: 280rpx;
  border-radius: 0;
  overflow: hidden;
}

.banner__item {
  width: 100%;
  height: 320rpx;
  position: relative;
}

.banner__img {
  width: 100%;
  height: 100%;
}

.banner__mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.55), transparent);
}

.banner__title {
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  bottom: 18rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 800;
}

.banner-indicators {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 12rpx;
  z-index: 8;
  gap: 10rpx;
  padding: 0 10rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 9999rpx;
  background: rgba(255, 255, 255, 0.6);
  transition: width 0.2s, background 0.2s;
}

.dot.on {
  width: 24rpx;
  background: rgba(255, 255, 255, 0.95);
}

.month {
  margin-top: 10rpx;
  margin-bottom: 18rpx;
  align-items: center;
}

.month__title {
  min-width: 107rpx;
  height: 26rpx;
  font-size: 26.38rpx;
  font-weight: 800;
  text-align: left;
  color: #e18638;
  line-height: 26rpx;
  white-space: nowrap;
}

.month__picker {
  padding: 14rpx 0;
  border-radius: var(--radius-pill);
  background: #fff;
  color: var(--text-secondary);
}

.month__picker-text {
  height: 25rpx;
  font-size: 26.38rpx;
  font-weight: 800;
  text-align: left;
  color: var(--text-primary);
  line-height: 25rpx;
  white-space: nowrap;
}

.month__picker-icon {
  width: 28rpx;
  height: 28rpx;
  flex: 0 0 auto;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 12rpx 10rpx;
}

.obs {
  display: flex;
  flex-direction: column;
  width: 294.94rpx;
  margin-bottom: 18rpx;
}

.thumb-wrap {
  position: relative;
  width: 100%;
  transform: scale(1);
  transition: transform 0.2s;
}

.thumb-wrap:active {
  transform: scale(0.98);
}

.thumb {
  position: relative;
  width: 100%;
  height: 293.72rpx;
  border-radius: 29.09rpx;
  overflow: hidden;
}

.thumb-notdone {
  background: #fcf4eb;
}

.thumb__inner {
  position: absolute;
  inset: 0;
  border-radius: 29.09rpx;
  overflow: hidden;
}

.thumb__img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.thumb__date {
  position: absolute;
  top: 14rpx;
  left: 14rpx;
  z-index: 10;
  color: #fff;
  font-size: 20rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  white-space: nowrap;
  overflow: hidden;
}

.thumb__camera {
  position: absolute;
  top: 14rpx;
  right: 14rpx;
  z-index: 10;
  width: 22rpx;
  height: 20rpx;
  opacity: 0.8;
  color: #fff;
  pointer-events: none;
}

.camera-icon {
  position: relative;
  width: 100%;
  height: 100%;
}

.camera-icon__body {
  position: absolute;
  left: 0;
  right: 0;
  top: 4rpx;
  bottom: 0;
  border: 2rpx solid currentColor;
  border-radius: 5rpx;
  box-sizing: border-box;
}

.camera-icon__top {
  position: absolute;
  top: 0;
  left: 4rpx;
  width: 10rpx;
  height: 5rpx;
  border: 2rpx solid currentColor;
  border-bottom: 0;
  border-radius: 4rpx 4rpx 0 0;
  box-sizing: border-box;
}

.camera-icon__lens {
  position: absolute;
  left: 50%;
  top: 55%;
  width: 8rpx;
  height: 8rpx;
  border: 2rpx solid currentColor;
  border-radius: 9999rpx;
  transform: translate(-50%, -50%);
  box-sizing: border-box;
}

.camera-icon__dot {
  position: absolute;
  right: 3rpx;
  top: 8rpx;
  width: 2rpx;
  height: 2rpx;
  background: currentColor;
  border-radius: 9999rpx;
}

.mood-notch {
  position: absolute;
  left: -80rpx;
  bottom: -80rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 9999rpx;
  /* Same as page background so it looks like the card corner is carved out. */
  background: #fff;
  z-index: 9;
  pointer-events: none;
}

.mood {
  position: absolute;
  left: -6rpx;
  bottom: -6rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid #fff;
  z-index: 10;
  overflow: hidden;
  pointer-events: none;
}

.mood__emoji {
  font-size: 30rpx;
  line-height: 1;
}

.mood__img {
  width: 100%;
  height: 100%;
  display: block;
}

.mood-empty {
  background: rgba(225, 134, 56, 0.7);
  border-color: #fff;
  color: #fff;
}

.mood__blank {
  width: 100%;
  height: 100%;
}

.smile-icon {
  position: relative;
  width: 44rpx;
  height: 44rpx;
  color: currentColor;
}

.smile-icon__eye {
  position: absolute;
  top: 14rpx;
  width: 6rpx;
  height: 6rpx;
  border-radius: 9999rpx;
  background: currentColor;
}

.smile-icon__eye--l {
  left: 12rpx;
}

.smile-icon__eye--r {
  right: 12rpx;
}

.smile-icon__mouth {
  position: absolute;
  left: 50%;
  top: 24rpx;
  width: 26rpx;
  height: 16rpx;
  border: 6rpx solid currentColor;
  border-top: 0;
  border-left: 0;
  border-right: 0;
  border-radius: 0 0 9999rpx 9999rpx;
  transform: translateX(-50%);
  box-sizing: border-box;
}

.mood-orange {
  background: rgba(249, 115, 22, 0.9);
  color: #fff;
}

.mood-green {
  background: rgba(16, 185, 129, 0.9);
  color: #fff;
}

.mood-gray {
  background: rgba(107, 114, 128, 0.75);
  color: #fff;
}

.mood-red {
  background: rgba(239, 68, 68, 0.85);
  color: #fff;
}

.mood-blue {
  background: rgba(59, 130, 246, 0.85);
  color: #fff;
}

.mood-pink {
  background: rgba(236, 72, 153, 0.85);
  color: #fff;
}

.plus {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: rgba(249, 115, 22, 0.22);
  font-weight: 700;
}

.foot {
  padding: 8rpx 4rpx 0;
}

.foot__t {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-ink);
  letter-spacing: 2rpx;
  margin-bottom: 4rpx;
}

.foot__s {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-ink);
  letter-spacing: 2rpx;
}

.foot--all-gray .foot__t,
.foot--all-gray .foot__s {
  color: var(--text-ink-muted);
}

.foot--mixed .foot__s {
  color: var(--text-ink-muted);
}

.foot--all-black .foot__t,
.foot--all-black .foot__s {
  color: var(--text-ink);
}
