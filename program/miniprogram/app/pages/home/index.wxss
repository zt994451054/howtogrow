.page {
  min-height: 100vh;
  background: #fff;
}

.status {
  background: #fff;
}

.header {
  padding: 0 32rpx 16rpx;
  position: sticky;
  top: 0;
  z-index: 20;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
}

.a {
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 9999rpx;
  background: var(--brand);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  box-shadow: var(--shadow-brand);
}

.avatar__img {
  width: 100%;
  height: 100%;
}

.avatar__text {
  font-size: 24rpx;
  font-weight: 800;
}

.greet {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-primary);
  line-height: 1.2;
}

.icon-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
  background: #fff;
  box-shadow: var(--shadow-sm);
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-layer {
  position: fixed;
  inset: 0;
  z-index: 60;
}

.menu-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.18);
  opacity: 1;
}

.menu-pop {
  position: absolute;
  right: 24rpx;
  width: 320rpx;
  background: #fff;
  border-radius: var(--radius-16);
  box-shadow: var(--shadow-md);
  border: 2rpx solid rgba(17, 24, 39, 0.06);
  overflow: hidden;
  animation: fadeIn 0.18s ease-out forwards;
}

.menu-pop__title {
  font-size: 20rpx;
  color: var(--text-muted);
  padding: 18rpx 20rpx 10rpx;
}

.menu-pop__list {
  padding: 0 8rpx 10rpx;
}

.menu-item {
  width: 100%;
  text-align: left;
  background: transparent;
  border-radius: 14rpx;
  padding: 18rpx 16rpx;
  color: var(--text-secondary);
  font-size: 26rpx;
  font-weight: 700;
}

.menu-item::after {
  border: none;
}

.menu-item.on {
  background: rgba(249, 115, 22, 0.10);
  color: var(--brand);
}

.menu-item__row {
  align-items: center;
}

.menu-item__name {
  max-width: 240rpx;
}

.menu-item__dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 9999rpx;
  background: var(--brand);
}

.menu-item.add {
  color: var(--brand);
  font-weight: 900;
}

.body {
  background: #fff;
}

.wrap {
  padding: 24rpx 32rpx 220rpx;
}

.empty {
  padding: 120rpx 32rpx 220rpx;
}

.empty__logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 9999rpx;
  background: #fff;
  box-shadow: var(--shadow-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 28rpx;
}

.logo-dot {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
  background: var(--brand);
  position: relative;
}

.logo-smile {
  width: 34rpx;
  height: 18rpx;
  border: 6rpx solid #fff;
  border-top: 0;
  border-left: 0;
  border-right: 0;
  border-radius: 0 0 9999rpx 9999rpx;
  position: absolute;
  left: 18rpx;
  top: 26rpx;
}

.logo-tail {
  width: 18rpx;
  height: 28rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 9999rpx;
  position: absolute;
  right: -10rpx;
  bottom: 8rpx;
  transform: rotate(10deg);
}

.empty__title {
  font-size: 34rpx;
  font-weight: 800;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.empty__desc {
  font-size: 24rpx;
  color: var(--text-muted);
  text-align: center;
  white-space: pre-line;
  line-height: 40rpx;
  margin-bottom: 40rpx;
}

.btn-primary {
  background: var(--brand);
  color: #fff;
  padding: 24rpx 64rpx;
  border-radius: var(--radius-pill);
  font-size: 28rpx;
  font-weight: 800;
  box-shadow: var(--shadow-brand);
}

.btn-primary::after {
  border: none;
}

.banner-wrap {
  position: relative;
  width: 100%;
  height: 280rpx;
  margin-bottom: 24rpx;
}

.banner {
  width: 100%;
  height: 280rpx;
  border-radius: var(--radius-16);
  overflow: hidden;
}

.banner__item {
  width: 100%;
  height: 320rpx;
  position: relative;
}

.banner__img {
  width: 100%;
  height: 100%;
}

.banner__mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.55), transparent);
}

.banner__title {
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  bottom: 18rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 800;
}

.banner-indicators {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 12rpx;
  z-index: 8;
  gap: 10rpx;
  padding: 0 10rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 9999rpx;
  background: rgba(255, 255, 255, 0.6);
  transition: width 0.2s, background 0.2s;
}

.dot.on {
  width: 24rpx;
  background: rgba(255, 255, 255, 0.95);
}

.month {
  margin-top: 10rpx;
  margin-bottom: 18rpx;
  align-items: center;
}

.month__title {
  font-size: 24rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
  color: var(--brand);
  text-transform: uppercase;
}

.month__picker {
  color: var(--text-primary);
  gap: 8rpx;
}

.month__picker-text {
  font-size: 30rpx;
  font-weight: 900;
}

.month__picker-icon {
  font-size: 26rpx;
  line-height: 1;
  color: var(--text-muted);
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-bottom: 10rpx;
}

.obs {
  display: flex;
  flex-direction: column;
  width: calc((100% - 18rpx) / 2);
  margin-bottom: 18rpx;
}

.thumb-wrap {
  position: relative;
  width: 100%;
  transform: scale(1);
  transition: transform 0.2s;
}

.thumb-wrap:active {
  transform: scale(0.98);
}

.thumb {
  position: relative;
  width: 100%;
  padding-top: 100%;
  border-radius: var(--radius-16);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.thumb-notdone {
  background: #fff9f2;
}

.thumb__inner {
  position: absolute;
  inset: 0;
  border-radius: var(--radius-16);
  overflow: hidden;
}

.thumb__img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.date-tag {
  position: absolute;
  top: 14rpx;
  left: 14rpx;
  z-index: 10;
  border-radius: 14rpx;
  padding: 10rpx 12rpx;
  min-width: 78rpx;
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0.16);
}

.date-tag-done {
  background: rgba(0, 0, 0, 0.35);
  color: #fff;
}

.date-tag-undone {
  background: rgba(255, 255, 255, 0.85);
  color: var(--brand);
  border-color: rgba(249, 115, 22, 0.16);
}

.date-tag__d {
  font-size: 44rpx;
  font-weight: 900;
  line-height: 1;
}

.date-tag__w {
  margin-top: 6rpx;
  font-size: 18rpx;
  font-weight: 700;
  opacity: 0.9;
  line-height: 1.1;
}

.mood-notch {
  position: absolute;
  left: -70rpx;
  bottom: -70rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 9999rpx;
  /* Same as page background so it looks like the card corner is carved out. */
  background: #fff;
  z-index: 9;
  pointer-events: none;
  border: 2rpx solid rgba(243, 244, 246, 1);
}

.mood {
  position: absolute;
  left: 6rpx;
  bottom: 6rpx;
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 18rpx rgba(17, 24, 39, 0.12);
  border: 6rpx solid #fff;
  z-index: 10;
  overflow: hidden;
  pointer-events: none;
}

.mood__emoji {
  font-size: 30rpx;
  line-height: 1;
}

.mood__img {
  width: 100%;
  height: 100%;
  display: block;
}

.mood-empty {
  background: rgba(255, 255, 255, 0.96);
  border-color: rgba(243, 244, 246, 1);
}

.mood__blank {
  width: 100%;
  height: 100%;
}

.mood-orange {
  background: rgba(249, 115, 22, 0.9);
  color: #fff;
}

.mood-green {
  background: rgba(16, 185, 129, 0.9);
  color: #fff;
}

.mood-gray {
  background: rgba(107, 114, 128, 0.75);
  color: #fff;
}

.mood-red {
  background: rgba(239, 68, 68, 0.85);
  color: #fff;
}

.mood-blue {
  background: rgba(59, 130, 246, 0.85);
  color: #fff;
}

.mood-pink {
  background: rgba(236, 72, 153, 0.85);
  color: #fff;
}

.plus {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: rgba(249, 115, 22, 0.22);
  font-weight: 700;
}

.foot {
  padding: 8rpx 4rpx 0;
}

.foot__t {
  font-size: 22rpx;
  font-weight: 900;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.foot__t.muted {
  color: var(--text-muted);
}

.foot__s {
  font-size: 20rpx;
  color: var(--text-muted);
}
