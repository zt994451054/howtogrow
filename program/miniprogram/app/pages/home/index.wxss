.page {
  min-height: 100vh;
  background: #fff;
}

.content {
  padding: 0 24rpx 220rpx;
}

.hero {
  margin-top: 96rpx;
  margin-bottom: 128rpx;
  padding: 0 40rpx;
}

.logo {
  width: 224rpx; /* w-28 = 7rem = 112px = 224rpx */
  height: 224rpx;
  border-radius: 9999rpx;
  background: var(--brand); /* orange-500 */
  position: relative;
  box-shadow: 0 20px 25px -5px rgba(255, 237, 213, 1), 0 8px 10px -6px rgba(255, 237, 213, 1); /* shadow-xl shadow-orange-100 */
  margin-bottom: 96rpx; /* mb-12 */
}

.logo__smile {
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  top: 92rpx;
  height: 90rpx;
  border-bottom: 16rpx solid #ffffff; /* Thicker stroke */
  border-radius: 0 0 200rpx 200rpx;
  box-sizing: border-box;
}

.logo__tail {
  position: absolute;
  right: 60rpx;
  top: 56rpx;
  width: 16rpx;
  height: 70rpx;
  background: #ffffff;
  border-radius: 999rpx;
}

.quote {
  text-align: center;
  font-size: 40rpx; /* text-xl */
  font-weight: 700; /* font-bold */
  color: #9ca3af; /* text-gray-400 */
  line-height: 1.625; /* leading-relaxed */
  white-space: pre-line;
  letter-spacing: 0.025em; /* tracking-wide */
}

.section {
  margin-bottom: 48rpx; /* mb-12 */
}

.section__title {
  color: var(--brand); /* text-orange-500 */
  font-size: 28rpx; /* text-sm */
  font-weight: 700; /* font-bold */
  letter-spacing: 0.1em; /* tracking-widest */
  text-transform: uppercase;
  margin-bottom: 16rpx; /* mb-4 */
}

.about {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 44rpx;
  font-weight: 600;
}

.more {
  color: var(--text-muted);
  font-size: 22rpx;
  margin-left: 6rpx;
}

.courses {
  width: 100%;
  padding-bottom: 20rpx;
}

.courses__row {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
  padding: 0 0 10rpx;
}

.course {
  width: 440rpx; /* 220px */
  height: 680rpx; /* 340px */
  border-radius: 32rpx;
  overflow: hidden;
  position: relative;
  box-shadow: var(--shadow-md); /* shadow-lg */
  flex-shrink: 0;
  transform: scale(1);
  transition: transform 0.3s;
}

.course:active {
  transform: scale(0.98);
}

.course__bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  filter: grayscale(20%);
}

.course__mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), transparent, rgba(0, 0, 0, 0.8));
}

.course__inner {
  position: absolute;
  inset: 0;
  padding: 40rpx; /* p-5 = 1.25rem = 20px = 40rpx */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course__brand {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8rpx; /* gap-1 */
}

.mini-dot {
  width: 40rpx; /* w-5 */
  height: 40rpx; /* h-5 */
  border-radius: 9999rpx;
  background: #fff;
  color: var(--brand);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx; /* text-[10px] */
  font-weight: 700;
}

.mini-text {
  color: #fff;
  font-size: 28rpx; /* text-sm */
  font-weight: 600; /* font-semibold */
  letter-spacing: 0.025em; /* tracking-wide */
}

.course__title {
  color: #fff;
  font-size: 40rpx; /* text-xl */
  font-weight: 700; /* font-bold */
  line-height: 1.25; /* leading-tight */
  text-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.3); /* drop-shadow-md */
}

.course__sub {
  color: #d1d5db; /* text-gray-300 */
  font-size: 24rpx; /* text-xs */
  font-weight: 500; /* font-medium */
  text-transform: uppercase;
  letter-spacing: 0.05em; /* tracking-wider */
  margin-top: 16rpx; /* mt-2 */
}

