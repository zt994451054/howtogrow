.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-top: 1rpx solid var(--border);
  z-index: 999;
}

.tabbar__inner {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 18rpx 24rpx 10rpx;
}

.tabbar__item {
  min-width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  color: var(--text-muted);
}

.tabbar__item.is-active {
  color: var(--brand);
}

.tabbar__icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.icon-image {
  width: 100%;
  height: 100%;
  display: block;
}

.tabbar__label {
  font-size: 20rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.home-indicator {
  width: 260rpx;
  height: 10rpx;
  background: #d1d5db;
  border-radius: 9999rpx;
  margin: 0 auto 10rpx;
  opacity: 0.9;
}

