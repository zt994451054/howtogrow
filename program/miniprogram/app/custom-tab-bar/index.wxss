@import "../styles/tokens.wxss";

.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-top: 0;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
  overflow: visible;
}

.tabbar__bg {
  position: absolute;
  left: 3px;
  right: 0;
  top: 0;
  width: 100%;
  height: 170rpx;
  pointer-events: none;
  z-index: 0;
}

.tabbar__inner {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 170rpx;
  padding: 0rpx 24rpx 18rpx;
  position: relative;
  z-index: 1;
}

.tabbar__item {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: var(--text-muted);
}

.tabbar__item.is-active {
  color: var(--text-ink);
}

.tabbar__icon {
  width: 42rpx;
  height: 42rpx;
  margin-bottom: 8rpx;
}

.icon-image {
  width: 100%;
  height: 100%;
  display: block;
}

.tabbar__label {
  font-size: 20rpx;
  font-weight: 400;
  line-height: 1;
  white-space: nowrap;
}

.tabbar__item.is-active .tabbar__label {
  font-weight: 600;
}

.tabbar__spacer {
  width: 84rpx;
  flex-shrink: 0;
}

.tabbar__center {
  position: absolute;
  left: 50%;
  top: 0;
  transform: translate(-50%, -40%);
  width: 150rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
  z-index: 2;
}

.center-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 9999rpx;
  background: transparent;
  border: none;
  box-shadow: none;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto;
  color: var(--brand);
}

.center-btn:active {
  transform: scale(0.96);
}

.center-icon {
  width: 100%;
  height: 100%;
  display: block;
}

.icon-chart {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  gap: 6rpx;
  color: #9ca3af;
}

.icon-chart.is-active {
  color: var(--brand);
}

.icon-chart .bar {
  width: 8rpx;
  border-radius: 9999rpx;
  background: currentColor;
}

.icon-chart .b1 {
  height: 16rpx;
}

.icon-chart .b2 {
  height: 28rpx;
}

.icon-chart .b3 {
  height: 22rpx;
}
